<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{hotel.imageUrl}}" alt="">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{hotel.name}}</h3>
            </div>
            <div>
                {{hotel.city}}
            </div>
            <div>
                <h3>{{hotel.owner}}</h3>
            </div>
            <p><span>Free rooms: {{hotel.freeRooms}}</span> </p>

            {{#if isOwner}}
            <a href="/hotels/edit/{{hotel._id}}" class="edit">Edit</a>
            <a href="/hotels/delete/{{hotel._id}}" class="remove">Delete</a>
            {{else}}
            {{#if hasBeenBooked}}
            <p><span class="green">You already have booked a room</span> </p>
            {{else}}
            <a href="/hotels/book/{{hotel._id}}" class="book">Book</a>
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>
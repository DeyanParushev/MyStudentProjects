<h1>{{cube.name}}</h1>
<img class="cube"
  src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{cube.description}}</p>
  <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
  <a class="btn" href="/cubes/attach/{{cube._id}}">Attach</a>
  <a class="btn" href="/cubes">Back</a>
  <a class="btn" href="/cubes/edit/{{cube._id}}">Edit</a>
  <a class="btn" href="/cubes/delete/{{cube._id}}">Delete</a>
</div>

{{#each accessories}}
<div class="cube">
  <img class="cube"
    src="{{imageUrl}}">
  <p class="name">{{name}}</p>
  <p><span>Description</span>{{description}}</p>
</div>
{{/each}}